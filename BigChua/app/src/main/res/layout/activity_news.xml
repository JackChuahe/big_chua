<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.example.jackcai.bigchua.news.News">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/news_top_title_bar"
        android:orientation="horizontal"
        android:background="#4052b5"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新闻"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="19sp"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/biz_wallet_grid_item_tag_new"/>
    </LinearLayout>
    <ListView
        android:layout_below="@+id/news_top_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/news_list_view">
    </ListView>
    <ProgressBar
        android:id="@+id/news_list_pb"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
