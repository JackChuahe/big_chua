<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    tools:context="com.example.jackcai.bigchua.pics.Pics">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/top_title_bar"
        android:orientation="horizontal"
        android:background="#4052b5"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:layout_height="40dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/biz_live_bubbling_red"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门图片新闻"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="19sp"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            />
    </LinearLayout>

    <ListView
        android:layout_below="@+id/top_title_bar"
        android:layout_width="match_parent"
        android:id="@+id/pics_list_view"
        android:dividerHeight="0dp"
        android:divider="#00000000"
        android:layout_height="wrap_content">
    </ListView>
    <ProgressBar
        android:id="@+id/pics_list_pb"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content" />
</RelativeLayout>
