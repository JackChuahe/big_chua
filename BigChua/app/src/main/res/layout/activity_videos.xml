<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    tools:context="com.example.jackcai.bigchua.videos.Videos">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/top_title_bar"
        android:orientation="horizontal"
        android:background="#3140a0"
        android:gravity="center"
        android:layout_height="40dp">
        <ImageView
            android:layout_width="30dp"
            android:src="@drawable/biz_news_list_home_my_home"
            android:layout_height="30dp" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="热门视频"
    android:textStyle="bold"
    android:textColor="#FFFFFF"
    android:textSize="19sp"
    android:layout_gravity="center"
    android:paddingLeft="10dp"
    />
    </LinearLayout>
    <ListView
        android:layout_below="@+id/top_title_bar"
        android:layout_width="match_parent"
        android:id="@+id/videos_list_view"
        android:dividerHeight="0dp"
        android:divider="#00000000"
        android:layout_height="wrap_content">
    </ListView>
    <ProgressBar
        android:id="@+id/video_progressbar"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content" />
</RelativeLayout>
